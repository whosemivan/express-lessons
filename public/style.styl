body
  display flex
  justify-content center
  align-items center
  margin 0
  min-height 100vh
  flex-direction column
  h2 //body h2 {}
    color red
    
  &>h1 // body>h1
    color blue
    text-align center

  .products
    display grid
    grid-template-columns repeat(4, 1fr);
    gap 40px;

  .products__item
    display flex
    padding 40px
    flex-direction column
    align-items center
    justify-content center
    box-shadow 0 0 5px 0 #0002
    &:hover
      background-color: #0002;
